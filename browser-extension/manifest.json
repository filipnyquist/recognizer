{
  "manifest_version": 3,
  "name": "reCognizer Browser Extension",
  "version": "1.0.0",
  "description": "AI-powered reCAPTCHA solver using ONNX models in the browser",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "reCognizer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "inject.js",
        "ai-engine.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}